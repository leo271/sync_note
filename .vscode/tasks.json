{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build and run FRONTEND",
            "type": "shell",
            "command": "sh",
            "args": [
                "-c",
                "cd frontend && find . -name \"*.class\" -type f -delete && javac Main.java -d classes && java -cp classes Main"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": [],
            "detail": "フロントエンドを実行する"
        },
        {
            "label": "build and run BACKEND",
            "type": "shell",
            "windows": {
                "command": "powershell.exe",
                "args": [
                    "-File",
                    "./.vscode/bin/br_backend.ps1"
                ]
            },
            "osx": {
                "command": "sh",
                "args": [
                    "./.vscode/bin/br_backend.sh"
                ]
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": [],
            "detail": "バックエンドを実行する"
        }
    ]
}